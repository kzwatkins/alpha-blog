<h1>Listing all Articles</h1>
<p>
	<%= link_to "Create new article", new_article_path %>
</p>

<table summary="All articles can be seen below">
<tr>
	<th>Title</th>
	<th>Description</th>
	<th>Edit Article</th>
	<th>Show Article</th>
	<th>Destroy Article</th>
</tr>

<% @articles.each do |article| %>
<tr>
	<td><%= article.title %></td>
	<td><%=  article.description %></td>
	<td>	<%= link_to "Edit article", edit_article_path(article) %></td>
	<td><%= link_to "Show article", article_path(article) %></td>
	<td><%= link_to "Remove article", article_path(article), method: :delete, data: {confirm: "Confirm article deletion (can't be undone)!"} %></td>
</tr>
<% end %>

</table>

<%= render "footer" %>
